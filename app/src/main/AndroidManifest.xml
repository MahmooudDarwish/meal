<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MealApp"
        tools:targetApi="31">
        <activity
            android:name=".feature.meal_details.view.MealDetails"
            android:exported="false" />
        <activity
            android:name=".feature.welcome.view.Welcome"
            android:exported="false" />
        <activity
            android:name=".feature.home.view.Home"
            android:exported="false" />
        <activity
            android:name=".feature.auth.sign_up.view.SignUp"
            android:exported="false" />
        <activity
            android:name=".feature.auth.sign_in.view.SignIn"
            android:exported="false" />
        <activity
            android:name=".feature.splash.view.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>